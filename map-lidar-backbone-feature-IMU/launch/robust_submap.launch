<launch>

  <arg name="rviz" default="true" />

  <node pkg="map_lidar_backbone" type="scanRegistration" name="scanRegistration" output="screen"/>

  <node pkg="map_lidar_backbone" type="laserRobustOdometry" name="laserRobustOdometry" output="screen" respawn="true">
  </node>

  <node pkg="map_lidar_backbone" type="laserMapping" name="laserMapping" output="screen"/>
  <node pkg="map_lidar_backbone" type="transformMaintenance" name="transformMaintenance" output="screen"/>


  <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find map_lidar_backbone)/rviz_cfg/map_lidar_backbone.rviz" />
  </group>

</launch>
